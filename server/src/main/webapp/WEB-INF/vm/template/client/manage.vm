<!-- DataTables -->
<link rel="stylesheet" href="/static/css/dataTables.bootstrap.css">

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Client
        <small>Management</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Client</a></li>
        <li class="active">Client management</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All Clients</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="clients_table_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="clients_table" class="table table-bordered table-hover dataTable" role="grid"
                                       aria-describedby="clients_table_info">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="clients_table" rowspan="1"
                                            colspan="1" aria-sort="ascending"
                                            aria-label="#: activate to sort column descending">#
                                        </th>
                                        <th>IP</th>
                                        <th>Port</th>
                                        <th class="sorting" tabindex="0" aria-controls="clients_table" rowspan="1"
                                            colspan="1" aria-label="Register time: activate to sort column ascending">
                                            Register time
                                        </th>
                                        <th>Support jobs</th>
                                        <th>Operation</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

</section>

<!-- DataTables -->
<script src="/static/js/jquery.dataTables.min.js"></script>
<script src="/static/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="/static/js/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="/static/js/fastclick.min.js"></script>

<script>
    $(function () {
        $('#clients_table').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "/client/list",
            "columnDefs": [
                {
                    "defaultContent": "",
                    "targets": "_all"
                },
                {
                    "targets": 0,
                    data: function (row, type, set, meta) {
                        return meta.settings._iDisplayStart + meta.row + 1;
                    }
                },
                {
                    "targets": 5,
                    "data": null,
                    "render": function (data, type, full, meta) {
                        var disableLink = "";
                        return '<a href="' + disableLink + '">Disable</a>';
                    }
                }
            ],
            "columns": [
                {"data": "num"},
                {"data": "ip"},
                {"data": "port"},
                {"data": "createTime"},
                {"data": "supportJobs"}
            ]
        });
    });
</script>